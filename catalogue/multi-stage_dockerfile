FROM node:20.19.5-alpine3.22 as build
WORKDIR /app/server
COPY *.js /app/server/
COPY *.json /app/server/
RUN npm install
ENV mongo="true" \
    MONGO_URL="mongodb://mongodb:27017/catalogue"
CMD [ "node","server.js" ]

FROM node:20.19.5-alpine3.22
WORKDIR /app/server
COPY --from=build /app/server /app/server
ENV mongo="true" \
    MONGO_URL="mongodb://mongodb:27017/catalogue"
CMD [ "node","server.js" ]

